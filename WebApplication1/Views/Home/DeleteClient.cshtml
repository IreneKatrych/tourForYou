@model WebApplication1.Models.Client
    @{
        ViewBag.Title = "DeleteClient";
        Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Видалити</h2>

<h3>Ви впевнені що хочете видалити це?</h3>
<div>
    <h4>Клієнт </h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.LabelFor(model => model.FirstName, "Ім'я")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt>
            @Html.LabelFor(model => model.SecondName, "Прізвище")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SecondName)
        </dd>
        <dt>
            @Html.LabelFor(model => model.TelNumber, "№ тел.")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TelNumber)
        </dd>
        <dt>
            @Html.LabelFor(model => model.Town, "Місто")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Town)
        </dd>
        <dt>
            @Html.LabelFor(model => model.DateOfBirth, "Дата народження")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateOfBirth)
        </dd>
       

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Видалити" class="btn btn-default" /> |
            @Html.ActionLink("Назад до списку", "Clients")
        </div>
    }
</div>
